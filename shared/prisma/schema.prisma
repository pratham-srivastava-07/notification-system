generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Channel {
  EMAIL
  SMS
  WEBHOOK
}

enum DeliveryStatus {
  PENDING
  SUCCESS
  FAILED
  RETRYING
  DLQ
}

model Tenant {
  id         String   @id @default(uuid())
  name       String
  apiKey     String   @unique
  rateLimit  Int      @default(100)
  isActive   Boolean  @default(true)
  createdAt DateTime @default(now())

  events     Event[]
  rules      Rule[]
  templates  Template[]
  deliveries DeliveryLog[]
}

model Event {
  id         String   @id @default(uuid())
  tenantId   String
  eventType  String
  payload    Json
  receivedAt DateTime @default(now())

  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  deliveries DeliveryLog[]

  @@index([tenantId, eventType])
}

model Rule {
  id         String   @id @default(uuid())
  tenantId   String
  eventType  String
  channels   Channel[]
  conditions Json
  isActive   Boolean  @default(true)
  createdAt DateTime @default(now())

  tenant     Tenant   @relation(fields: [tenantId], references: [id])

  @@index([tenantId, eventType])
}

model Template {
  id         String   @id @default(uuid())
  tenantId   String
  channel    Channel
  version    Int
  body       String
  isActive   Boolean  @default(true)
  createdAt DateTime @default(now())

  tenant     Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, channel, version])
}

model DeliveryLog {
  id          String         @id @default(uuid())
  eventId     String
  tenantId    String
  channel     Channel
  status      DeliveryStatus
  attempts    Int            @default(0)
  error       String?
  lastTriedAt DateTime?
  createdAt   DateTime       @default(now())

  event       Event          @relation(fields: [eventId], references: [id])
  tenant      Tenant         @relation(fields: [tenantId], references: [id])

  @@index([tenantId, channel, status])
}

model IdempotencyKey {
  id        String   @id
  tenantId  String
  createdAt DateTime @default(now())

  @@index([tenantId])
}